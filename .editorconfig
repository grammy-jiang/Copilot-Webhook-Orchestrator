# EditorConfig helps maintain consistent coding styles across editors/IDEs
# https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Default indentation (safe baseline)
indent_style = space
indent_size = 4

# Soft guideline; enforcement handled by formatters/linters
max_line_length = 120

[*.py]
indent_size = 4
max_line_length = 88

[*.{yml,yaml}]
indent_size = 2
max_line_length = 80

[*.json]
# Matches pretty-format-json pre-commit hook
indent_size = 4

[*.{js,jsx,ts,tsx}]
indent_size = 2

[*.sh]
indent_size = 2

# Markdown often uses trailing spaces for hard breaks
[*.md]
trim_trailing_whitespace = false
max_line_length = 120

[Makefile]
indent_style = tab
